{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "command": [
        "cd ${relativeFileDirname}/.. &&",
        "cargo espflash --release save-image app.bin &&",
        "pip3 install -r $HOME/workspace/requirements.txt &&",
        "python3 $HOME/workspace/wokwi-server-esp32c3.py"
      ],
      "problemMatcher": [
        "$rustc"
      ],
      "label": "ESP: Generate binary and launch Wokwi",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "command": [
        "cd ${relativeFileDirname}/.. &&",
        "cargo espflash --release save-image app.bin &&",
        "xdg-open https://sergiogasquez.github.io/esp-rs-devcontainer/flash"
      ],
      "problemMatcher": [
        "$rustc"
      ],
      "label": "ESP: Generate binary and open online flash tool",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
  ]
}